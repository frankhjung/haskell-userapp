name:                  userapp
version:               0.4.0
synopsis:              Code from leanpub.com/finding-success-in-haskell
description:           Implementation of code from Finding Success in Haskell by Julie Moronuki and Chris Martin
homepage:              https://github.com/frankhjung/userapp#readme
license:               BSD3
license-file:          LICENSE
author:                Frank H Jung
maintainer:            frankhjung@linux.com
copyright:             Copyright Â© 2019-2020 Frank H Jung
category:              education
build-type:            Simple
extra-source-files:    README.md
cabal-version:         >=1.10

source-repository head
  type:                git
  location:            https://github.com/frankhjung/userapp

executable userapp
  default-language:    Haskell2010
  hs-source-dirs:      app
  main-is:             Main.hs
  build-depends:       base == 4.12.0.0
                     , text == 1.2.3.1
                     , userapp
                     , validation == 1.1

library
  default-language:    Haskell2010
  hs-source-dirs:      src
  exposed-modules:     Lib
  build-depends:       base == 4.12.0.0
                     , text == 1.2.3.1
                     , validation == 1.1

test-suite userapp-test
  default-language:    Haskell2010
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base == 4.12.0.0
                     , HUnit == 1.6.0.0
                     , text == 1.2.3.1
                     , validation == 1.1
                     , userapp
